@article{ren_ett2_2004-1,
	title = {The {ETT2} {Gene} {Cluster}, {Encoding} a {Second} {Type} {III} {Secretion} {System} from {Escherichia} coli, {Is} {Present} in the {Majority} of {Strains} but {Has} {Undergone} {Widespread} {Mutational} {Attrition}},
