@article{davies_sodium_2019,
	title = {Sodium {Taurocholate} {Stimulates} {Campylobacter} jejuni {Outer} {Membrane} {Vesicle} {Production} via {Down}-{Regulation} of the {Maintenance} of {Lipid} {Asymmetry} {Pathway}},
