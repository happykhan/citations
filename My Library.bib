	journal = {Frontiers in Microbiology},
	author = {Hetman, Benjamin M. and Mutschall, Steven K. and Carrillo, Catherine D. and Thomas, James E. and Gannon, Victor P. J. and Inglis, G. Douglas and Taboada, Eduardo N.},
	year = {2020},
	note = {Publisher: Frontiers},
	keywords = {Campylobacter jejuni, Culture methods, Enrichment, Microbiological surveillance, Molecular subtyping},
	file = {Full Text PDF:C\:\\Users\\black\\Zotero\\storage\\GPT37JU8\\Hetman et al. - 2020 - “These Aren’t the Strains You’re Looking for” Rec.pdf:application/pdf},
}

